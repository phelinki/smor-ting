# ===========================================
# SMOR-TING BACKEND ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ===========================================
# SERVER CONFIGURATION
# ===========================================
ENV=development
PORT=8080
HOST=0.0.0.0
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s

# ===========================================
# DATABASE CONFIGURATION (MongoDB)
# ===========================================
DB_DRIVER=mongodb
DB_HOST=localhost
DB_PORT=27017
DB_NAME=smor_ting
DB_USERNAME=YOUR_MONGODB_USERNAME
DB_PASSWORD=YOUR_MONGODB_PASSWORD
DB_SSL_MODE=disable
DB_IN_MEMORY=false

# MongoDB Atlas Configuration (for production)
MONGODB_ATLAS=false
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/YOUR_DATABASE?retryWrites=true&w=majority

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Generate secure secrets using: openssl rand -base64 32
JWT_SECRET=YOUR_JWT_SECRET_MIN_32_CHARS_GENERATE_WITH_OPENSSL
JWT_ACCESS_SECRET=YOUR_ACCESS_SECRET_BASE64_ENCODED
JWT_REFRESH_SECRET=YOUR_REFRESH_SECRET_BASE64_ENCODED
JWT_EXPIRATION=24h
BCRYPT_COST=12

# Encryption keys for sensitive data
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_32_BYTES
PAYMENT_ENCRYPTION_KEY=YOUR_PAYMENT_ENCRYPTION_KEY_32_BYTES

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_TIME_FORMAT=RFC3339

# ===========================================
# MTN MOBILE MONEY CONFIGURATION
# ===========================================
MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
MOMO_TARGET_ENVIRONMENT=sandbox
MOMO_API_USER=YOUR_MTN_API_USER_UUID
MOMO_API_KEY=YOUR_MTN_API_KEY
MOMO_SUBSCRIPTION_KEY_COLLECTION=YOUR_COLLECTION_SUBSCRIPTION_KEY
MOMO_SUBSCRIPTION_KEY_DISBURSEMENT=YOUR_DISBURSEMENT_SUBSCRIPTION_KEY
MOMO_CALLBACK_HOST=https://your-domain.com

# ===========================================
# KYC CONFIGURATION (SmileID)
# ===========================================
KYC_BASE_URL=https://api.smileidentity.com
KYC_PARTNER_ID=YOUR_SMILE_ID_PARTNER_ID
KYC_API_KEY=YOUR_SMILE_ID_API_KEY
KYC_CALLBACK_URL=https://your-domain.com/api/v1/kyc/callback

# ===========================================
# DEVELOPMENT/TESTING
# ===========================================
# Set to true for in-memory database during testing
TEST_MODE=false
# Set to true to enable debug logging
DEBUG=false
